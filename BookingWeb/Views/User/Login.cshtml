
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-page my-5">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;margin-left:250px">
        <div class="col-lg-6 d-flex justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="row no-gutters" >
                    <!-- Bật lại hình ảnh nếu cần -->
                    @*<div class="col-lg-6 d-none d-lg-block">
                            <img src="https://wallpapercave.com/wp/wp5960139.jpg" alt="Login Image" class="img-fluid" style="height: 100%; object-fit: cover; border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;">
                        </div>*@
                    <div class="col-lg-12 d-flex flex-column justify-content-center p-5" style="width:875px">
                        <h3 class="text-center text-muted mb-4">Đăng nhập</h3>
                        @using (Html.BeginForm("Login", "User"))
                        {
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                <input type="email" name="Email" class="form-control rounded-pill" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nhập địa chỉ email của bạn" required>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Mật khẩu</label>
                                <input type="password" name="MatKhau" class="form-control rounded-pill" id="exampleInputPassword1" placeholder="Mật khẩu đăng nhập" required>
                                <span class="text-danger">@ViewBag.ThongBao</span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block rounded-pill">Đăng nhập</button>
                        }
                        <div class="mt-3 text-center">
                            <span>Bạn chưa có tài khoản? @Html.ActionLink("Đăng ký ngay", "SignUp", "User")</span>
                        </div>
                        <div class="mt-2 text-center">
                            <a href="#" class="text-secondary">Quên mật khẩu?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

