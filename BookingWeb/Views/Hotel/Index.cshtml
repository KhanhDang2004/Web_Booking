
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/Content/Stylesheet/stylesheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Content/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" asp-append-version="true" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/bootstrap-grid.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
}



<div class="container mt-5">
    <div class="booking-bar">
        <form class="booking-bar-list" method="get" action="/Search">
            <!-- Check-in & Check-out Dates -->
            <div class="form-group-list">
                <div class="form-group">
                    <label for="checkin">Nhận phòng</label>
                    <input type="date" id="checkin" name="checkin" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="checkout">Trả phòng</label>
                    <input type="date" id="checkout" name="checkout" class="form-control" />
                </div>
            </div>

            <!-- Rooms, Adults, Children -->
            <div class="form-group-list">
                <div class="form-group">
                    <label for="rooms">Phòng</label>
                    <input class="form-control width-120" type="number" id="rooms" name="rooms" min="1" value="1" />
                </div>
                <div class="form-group">
                    <label for="adults">Người lớn</label>
                    <input class="form-control width-120" type="number" id="adults" name="adults" min="1" value="2" />
                </div>
                <div class="form-group">
                    <label for="children">Trẻ em</label>
                    <input class="form-control width-120" type="number" id="children" name="children" min="0" value="0" />
                </div>
            </div>

            <!-- Search Button -->
            <div class="form-group">
                <button type="submit" class="search-button">Tìm kiếm</button>
            </div>
        </form>
    </div>
</div>

<!-- Link Bootstrap JS and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>




<style>
        .booking-bar {
            background-color: #f8f9fa;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .form-group-list {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 20px;
        }
        .form-group label {
            font-weight: bold;
        }
        .width-120 {
            width: 120px;
        }
        .search-button {
            width: 100%;
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 4px;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }
        .search-button:hover {
            background-color: #0056b3;
        }
       @* @media (max-width: 576px) {*@
           .form-group-list {
                flex-direction: column;
            }
            .search-button {
                width: 100%;
            }
        }
</style>
